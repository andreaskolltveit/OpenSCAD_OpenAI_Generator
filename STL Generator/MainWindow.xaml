<hc:Window x:Class="STL_Generator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:STL_Generator"
        xmlns:hc="https://handyorg.github.io/handycontrol"
        mc:Ignorable="d"
        Title="STL Generator" Height="560" Width="920" Background="#F4F6FB"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize"
        MinWidth="600" MinHeight="480">
    <Grid Background="#F4F6FB">
        <hc:Card Margin="40" Padding="32" Background="White" BorderBrush="#E5E7EB" BorderThickness="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Title -->
                <TextBlock Text="🧠 AI 3D Model Generator" FontSize="34" FontWeight="Bold" Foreground="#1F2937" Margin="0,0,0,20"/>

                <!-- Divider -->
                <hc:Divider Grid.Row="1" Margin="0,0,0,20"/>

                <!-- Prompt TextBox -->
                <TextBox x:Name="PromptTextBox"
                         Grid.Row="2"
                         Height="48"
                         FontSize="16"
                         Padding="14"
                         Margin="0,0,0,20"
                         hc:InfoElement.Placeholder="Describe the 3D object you want to generate..."
                         BorderThickness="1"
                         BorderBrush="#D1D5DB"
                         Background="#F9FAFB"
                         TabIndex="0"
                         ToolTip="Describe your 3D model here"/>

                <!-- Code Output Section -->
                <StackPanel Grid.Row="3" Orientation="Vertical" Margin="0,0,0,20">
                    <Button x:Name="GenerateButton"
                            Content="✨ Generate OpenSCAD"
                            Height="48"
                            Width="240"
                            Margin="0,0,0,20"
                            Style="{DynamicResource PrimaryButton}"
                            FontSize="16"
                            FontWeight="Bold"
                            HorizontalAlignment="Left"
                            TabIndex="1"
                            ToolTip="Generate OpenSCAD code from your prompt"/>

                    <TextBlock Text="Generated OpenSCAD Code:" FontSize="16" FontWeight="SemiBold" Foreground="#374151" Margin="0,0,0,8"/>

                    <TextBox x:Name="ScadCodeTextBox"
                             Height="160"
                             FontFamily="Consolas"
                             FontSize="14"
                             TextWrapping="Wrap"
                             IsReadOnly="True"
                             VerticalScrollBarVisibility="Auto"
                             Background="#F3F4F6"
                             BorderThickness="1"
                             BorderBrush="#D1D5DB"
                             TabIndex="2"
                             ToolTip="The generated OpenSCAD code will appear here"/>
                </StackPanel>

                <!-- Status/Error Message -->
                <TextBlock x:Name="StatusTextBlock"
                           Grid.Row="4"
                           Margin="0,0,0,10"
                           Foreground="#D97706"
                           FontWeight="SemiBold"
                           FontSize="14"
                           TextWrapping="Wrap"
                           Visibility="Collapsed"/>

                <!-- Export + Progress -->
                <StackPanel Grid.Row="5" Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button x:Name="ExportStlButton"
                            Content="📦 Export STL"
                            Height="44"
                            Width="160"
                            Style="{DynamicResource PrimaryButton}"
                            FontSize="16"
                            FontWeight="SemiBold"
                            TabIndex="3"
                            ToolTip="Export the generated model as an STL file"
                            Margin="0,0,12,0"/>
                    <ProgressBar x:Name="ProgressBar"
                                 Width="140"
                                 Height="10"
                                 IsIndeterminate="True"
                                 Visibility="Collapsed"
                                 VerticalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </hc:Card>
    </Grid>
</hc:Window>
